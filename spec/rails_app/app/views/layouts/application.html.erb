<!DOCTYPE html>
<html>
<head>
  <title>Authy App</title>
  <%= stylesheet_link_tag 'application' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if flash[:notice] %>
  <div id="notice">
    <%= flash[:notice] %>
  </div>
<% end %>

<% if flash[:error] %>
  <div class='alert alert-error'>
    <%= flash[:error] %>
<% end %>

<%= yield %>

</body>
</html>
